<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MealActivity">

    <ImageView
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:id="@+id/image_profile"
        android:layout_centerHorizontal="true"
        android:src="@drawable/yassa_poulet"
        android:layout_marginTop="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mealNom"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/image_profile"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:text=""/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mealDetails"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/mealNom"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:text=""/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/prixView"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/mealDetails"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:text=""/>
    <Button
        android:id="@+id/btnCommande"
        android:backgroundTint="@color/purple_700"
        android:layout_marginRight="@dimen/right"
        android:layout_marginLeft="@dimen/left"
        android:layout_marginTop="@dimen/top"
        android:text="Passer la commande"
        android:textSize="18dp"
        android:layout_width="match_parent"
        android:layout_below="@+id/prixView"
        android:layout_height="60dp"/>


</RelativeLayout>